<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/aaa"
    android:padding="10dp"
    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_product"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@color/green"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageview_product">

        <TextView
            android:id="@+id/name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="productname"
            android:textSize="18dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/darkblack"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/qty_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qty"
                android:textSize="14dp"
                android:padding="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/unit_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qty"
                android:layout_toRightOf="@+id/qty_product"
                android:textSize="14dp"
                android:padding="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qty"
                android:textSize="14dp"
                android:padding="5dp"
                android:layout_toRightOf="@id/unit_product"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/mrp_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qty"
                android:layout_toRightOf="@+id/price_product"
                android:textSize="14dp"
                android:padding="5dp"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/aaa"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_marginLeft="5dp"/>
    </RelativeLayout>
