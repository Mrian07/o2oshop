<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete"
        android:layout_marginRight="10dp"
        android:layout_gravity="end|center_vertical"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="140dp"
                android:id="@+id/imageview_product"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@drawable/ic_logo_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mirenda soft drink (Bottle)"
                    android:textSize="15dp"
                    android:id="@+id/name_product"
                    android:textStyle="bold"/>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:id="@+id/qty_product"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:layout_toRightOf="@+id/qty_product"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:id="@+id/unit_product"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="140dp"
                        android:id="@+id/aa"
                        android:layout_below="@+id/unit_product"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MRP:"
                            android:textColor="#F10606"
                            android:id="@+id/mrp_price"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Rs 28"
                            android:id="@+id/mrp_product"
                            android:textSize="16dp"/>



                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 28"
                        android:textStyle="bold"
                        android:layout_below="@+id/aa"
                        android:id="@+id/price_product"
                        android:textSize="16dp"/>




                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:background="@color/gray" />

    </LinearLayout>

</android.support.v7.widget.CardView>



